<controls:MetroWindow x:Class="Ghost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="MainWindow" Height="450" Width="700" ResizeMode="CanMinimize">

    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="OkButton">
            <Setter Property="TextElement.FontFamily" Value="Oxygen" />
            <Setter Property="Background" Value="#579457" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}" Padding="13,0,13,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#459D45" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <TabControl TabStripPlacement="Right">
        <TabControl.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="Styles/BoxTabItems.xaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </TabControl.Resources>

        <TabItem Header="Play">
            <Grid>
                <Image Source="pack://application:,,,/Resources/ghost.png" Width="376" Height="284" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0" />
                <Button Style="{StaticResource OkButton}" Content="1 v 1   Queue" Height="45" Width="150" FontSize="14" Click="ButtonBase_OnClick" Margin="361,360,10,10" />
            </Grid>
        </TabItem>
        <TabItem Header="Friends">
            <Label Content="DLC Only"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="34"/>
        </TabItem>
        <TabItem Header="Stats">
            <Label Content="u sux"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="34"/>
        </TabItem>
        <TabItem Header="Options">
            <Label Content="Coming Soon"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="34"/>
        </TabItem>
        <TabItem Header="Logout">
            <Grid>
                <Label Content="As they say in Latin: 'Carpe yolo'"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
                <Label Content="-Pengua 2015"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Margin="351,219,86,170"/>
            </Grid>
        </TabItem>
    </TabControl>
</controls:MetroWindow>
